<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context="troy.com.youparking.MainActivity"
            android:layout_gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/home_spots_text"
                android:id="@+id/spotsText"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_marginTop="51dp"
                android:layout_below="@+id/welcomeText"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/home_spots_number"
                android:id="@+id/spotsAvailable"
                android:layout_below="@+id/spotsText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="35sp"
                android:background="@drawable/spotsborder"
                android:padding="16sp" />

            <TextView
                android:id="@+id/achievementText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/home_achievements_text"
                android:layout_marginBottom="133dp"
                android:textColor="#000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/welcomeText"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp" />

        </RelativeLayout>
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
